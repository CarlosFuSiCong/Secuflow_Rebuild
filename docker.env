# Docker environment configuration file

# Environment mode (development/production)
ENVIRONMENT=development

# Database configuration
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=secuflow
MYSQL_USER=secuflow_user
MYSQL_PASSWORD=secuflow123

# Django configuration
SECRET_KEY=django-insecure-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000

# Frontend configuration (runs locally)
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000

# Development environment configuration
BACKEND_VOLUME=./backend:/app

# TNM configuration
JAVA_OPTS=-Xmx2g -Xms512m
TNM_JAVA_PATH=java
TNM_JAR_PATH=/app/tnm/tnm-cli.jar
TNM_WORK_DIR=/app/tnm/work
TNM_TIMEOUT=1800

# TNM Docker configuration
TNM_CONTAINER_NAME=secuflow-tnm
TNM_DOCKER_MODE=true
TNM_OUTPUT_DIR=/app/tnm_output
TNM_REPOSITORIES_DIR=/app/tnm_repositories

# AWS configuration (optional)
TNM_SQS_QUEUE_URL=
TNM_S3_BUCKET=
AWS_REGION=
AWS_ENDPOINT_URL=

# JWT configuration
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

